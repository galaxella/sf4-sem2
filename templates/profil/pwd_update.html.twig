{% extends '_template.html.twig' %}

{% block title %}Modification Pwd{% endblock %}



{% block content %}
    <div class="section">
        <h1 class="title">Modification</h1>


        {{ form_start(registrationForm) }}

        {{ form_row(registrationForm.plainPassword.first, {label: "Mot de passe" }) }}
        {{ form_row(registrationForm.plainPassword.second, { label:"Confirmer le passe" }) }}

        <button type="submit" class="btn">
            Modifier
        </button>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}