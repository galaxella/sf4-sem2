{% extends '_template.html.twig' %}

{% block title %}Inscription{% endblock %}



{% block content %}
    <div class="section">
        <h1 class="title">Inscription</h1>


        {{ form_start(registrationForm) }}

        {{ form_row(registrationForm.email, {label: "Adresse email:"}) }}
        {{ form_row(registrationForm.pseudo, {label: "Pseudo:"}) }}


        {{ form_row(registrationForm.plainPassword.first, {label: "Mot de passe" }) }}
        {{ form_row(registrationForm.plainPassword.second, { label:"Confirmer le passe" }) }}

        {# {{ form_row(registrationForm.agreeTerms) }} #}

        <button type="submit" class="btn">
            S'inscrire
        </button>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}
